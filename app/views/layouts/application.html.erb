<!DOCTYPE html>
<html lang="ru">
<head>
  <title>Праздник дества - интернет-магазин</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="container">
    <div class="row">
      <div class="span12">
        <div class="navbar">
          <div class="navbar-inner">
            <a class="brand" href="/">Праздник дества</a>
            <ul class="nav">
              <%= content_tag :li, link_to("Условия доставки", :controller => :static, :action => :delivery), :class => (current_page?(:controller => :static, :action => :delivery) ? "active" : "") %>
              <%= content_tag :li, link_to("Контакты", :controller => :static, :action => :about), :class => (current_page?(:controller => :static, :action => :about) ? "active" : "") %>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="span3 left-menu">
        <ul class="nav nav-list">
          <li class="nav-header">Разделы</li>

          <% for category in Category.all %>
            <%= content_tag :li, link_to(category.title, category), :class => (@category == category ? "active" : "") %>
          <% end %>
        </ul>
      </div>
      <div class="span9">
        <%= yield %>
      </div>
    </div>
  </div>

</body>
<%= javascript_include_tag "application" %>
</html>
